    "outDir": "build",
    "module": "esnext",
    "target": "es5",
    "declaration": true,
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/components",
    "src/styles",
    "index.tsx"
  ],
  "exclude": [
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}
